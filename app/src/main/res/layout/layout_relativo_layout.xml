<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutRelativo_Activity">

    <ImageView
        android:id="@+id/imgpreto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@color/black" />

    <ImageView
        android:id="@+id/imglaranja"
        android:layout_toRightOf="@id/imgpreto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="#FF5722" />

    <ImageView
        android:id="@+id/imgamarelo"
        android:layout_below="@id/imgpreto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="#FFC107" />

    <ImageView
        android:id="@+id/imgroxo"
        android:layout_toRightOf="@id/imgamarelo"
        android:layout_below="@id/imglaranja"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="#673AB7" />

</RelativeLayout>